<h1>User Detail</h1>
<%= link_to 'Back', :users %>
<table>
  <tbody>
  <tr>
    <th>ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%= @user.user_name %></td>
  </tr>
  <tr>
    <th>Age</th>
    <td><%= @user.age%></td>
  </tr>
  <tr>
    <th>Password</th>
    <td><%= @user.password %></td>
  </tr>
  </tbody>
</table>

<%= link_to 'Edit', :edit_user %>
<%= form_for @user, method: :delete do |f| %>
    <%= f.submit 'Delete task' %>
<% end %>